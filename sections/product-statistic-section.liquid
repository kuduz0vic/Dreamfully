<div class="page-padding">
  <div class="container_v2">
    <div class="w-layout-grid statistics-component">
      <div id="w-node-_513897b7-efd2-57a3-ab4d-2fbb657dfbe9-657dfbe5" class="statistics-content">
        <div class="margin-bottom margin-small">
          <h2 class="heading-3">{{ section.settings.heading }}</h2>
        </div>
        <div class="margin-bottom margin-medium">
          <p class="text-size-medium">{{ section.settings.description | newline_to_br }}</p>
        </div>
        <div class="w-layout-grid statistics-list">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {% when 'statistics_block' %}
              <div class="statistics-block">
                <div class="heading-style-h2"><img src="{{block.settings.statistics-svg}}" alt=""></div>
                <div>{{ block.settings.block_description }}</div>
              </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
      <div class="image-wrapper-statistics">
        <h2 class="heading-3 mobile">{{ section.settings.heading }}</h2>
        {%- if section.settings.main_image == nil -%}<img
            src="{{ 'image_3.png' | asset_url }}"
            loading="lazy"
            sizes="(max-width: 479px) 90vw, (max-width: 767px) 92vw, (max-width: 991px) 44vw, 40vw"
            srcset="{{ 'image_3-p-500.png' | asset_url }} 500w, {{ 'image_3-p-800.png' | asset_url }} 800w, {{ 'image_3-p-1080.png' | asset_url }} 1080w, {{ 'image_3.png' | asset_url }} 1222w"
            alt=""
            class="image-6">{%- else -%}<img
            src="{{ section.settings.main_image.src | img_url: 'master' }}"
            loading="lazy"
            alt="{{ section.settings.main_image.alt | escape }}"
            class="image-6"
            srcset="{{ section.settings.main_image | img_url: '1920x' }} 1920w,{{ section.settings.main_image | img_url: '1600x' }} 1600w,{{ section.settings.main_image | img_url: '1366x' }} 1366w,{{ section.settings.main_image | img_url: '1024x' }} 1024w,{{ section.settings.main_image | img_url: '768x' }} 768w,{{ section.settings.main_image | img_url: '640x' }} 640w">{%- endif -%}
      </div>
    </div>
  </div>
</div>



<script>
  var currentSection = document.currentScript.closest('.shopify-section');
  currentSection.setAttribute("class", "statistics-section");
</script>

{% schema %}
  {
    "presets": [
      {
        "name": "Product Statistics Section"
      }
    ],
    "name": "Product Statistic Section",
    "tag": "section",
    "class": "statistics-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Meditation by the Numbers"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "The meditation bear is made with high-quality materials and has a soft design."
      }, {
        "type": "image_picker",
        "id": "main_image",
        "label": "Main Image"
      }
    ],
    "blocks": [
      {
        "name": "Statistics Block",
        "type": "statistics_block",
        "settings": [
          {
            "type": "url",
            "id": "statistics-svg",
            "label": "Statistics SVG"
          }, {
            "type": "text",
            "id": "block_description",
            "label": "Block Description",
            "default": "5-star reviews"
          }
        ]
      }
    ]
  }
{% endschema %}