<div class="page-padding">
  <div class="container_v2">
    <div class="insta-inner-container">
      <div class="social-content-block">
        <div class="social-headline">{{ section.settings.heading }}</div>
        <p class="social-tagline">{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_url }}" class="primary-button w-button">{{ section.settings.button_url_text }}</a>
        <div class="html-embed w-embed">
          <style>
            .social-img-wrapper-desktop {
              aspect-ratio: 1 / 1;
            }
            #instagram-swiper .instagram-social-img-wrapper {
              aspect-ration: 1 / 1;
            }
          </style>
        </div>
      </div>
      <div class="desktop-social-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'instagram-blocks' %}
            <a href="{{block.settings.instagram-link}}" class="social-img-wrapper-desktop w-inline-block"><img
                src="{{ block.settings.instagram-photos | img_url: 'master' }}"
                loading="lazy"
                alt=""
                class="social-img"></a>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="instagram-swiper">
        <div id="instagram-swiper" class="swiper-container">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'instagram-blocks' %}
                <div class="swiper-slide">
                  <div class="instagram-social-img-wrapper">
                    <a href="{{block.settings.instagram-link}}"><img
                        src="{{ block.settings.instagram-photos | img_url: 'master' }}"
                        loading="lazy"
                        alt=""
                        class="image-7"></a>
                  </div>
                </div>
              {% endcase %}
            {% endfor %}
          </div>
          <div class="swiper-drag-wrapper">
            <div class="swiper-drag"></div>
          </div>
          <div class="swiper-arrow-overlay instagram">
            <div id="next-insta-post" class="swiper-arrow"><img
                src="{{ 'ic20-arrow-right.svg' | asset_url }}"
                loading="lazy"
                alt=""></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  var currentSection = document.currentScript.closest('.shopify-section');
  currentSection.setAttribute("class", "instagram-section");
</script>

{% schema %}
  {
    "name": "Instagram Gallery",
    "tag": "div",
    "class": "instagram-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Mindful Moments with the Meditation Bear"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Follow Us On Our Socials"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Follow us"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"
      }, {
        "type": "text",
        "id": "button_url_text",
        "label": "Button Url Text",
        "default": "{{ section.settings.button_label }}"
      }
    ],
    "blocks": [
      {
        "type": "instagram-blocks",
        "name": "Instagram Blocks",
        "settings": [
          {
            "type": "url",
            "id": "instagram-link",
            "label": "Instagram Link"
          }, {
            "type": "image_picker",
            "id": "instagram-photos",
            "label": "Instagram Photos"
          }
        ]
      }
    ]
  }
{% endschema %}